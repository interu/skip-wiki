#content
  %h1= "Editing Note"
  - form_for(@note) do |f|
    =f.error_messages

    %p
      = _h("Note|GroupBackendType")
      %ul.radios
        %li
          =f.radio_button(:group_backend_type, "BuiltinGroup", :disabled=>!@note.new_record?)
          =f.label :group_backend_type, h(_"個人用ノート"), :for=>"note_group_backend_type_builtingroup"
        %li
          =f.radio_button(:group_backend_type, "SkipGroup", :disabled=>!@note.new_record?)
          =f.label :group_backend_type, h(_"SKIPグループ"), :for=>"note_group_backend_type_skipgroup"

    %p
      =f.label :name, _h("Note|Name")
      %br
      =f.text_field :name
    %p
      =f.label :display_name, _h("Note|DisplayName")
      %br
      =f.text_field :display_name

    %p
      =f.label :description, _h("Note|Description")
      %br
      =f.text_area :description, :size=>"80x2"

    %p
      = _h("Note|Publicity")
      %br
      %ul.radios
        %li
          =f.radio_button(:publicity, Note::PUBLICITY_MEMBER_ONLY)
          =f.label "publicity_#{Note::PUBLICITY_MEMBER_ONLY}", _h("グループメンバーのみ閲覧/書込できる")

        %li
          =f.radio_button(:publicity, Note::PUBLICITY_READABLE)
          =f.label "publicity_#{Note::PUBLICITY_READABLE}", _h("全員が閲覧できる")

        %li
          =f.radio_button(:publicity, Note::PUBLICITY_WRITABLE)
          =f.label "publicity_#{Note::PUBLICITY_WRITABLE}", h(_"全員が閲覧/書込できる")

    %p
      = _h("Note|Category")
      %br
      %ul.radios
        - Category.lang("ja").each do |c|
          %li
            =f.radio_button :category_id, c.id
            =f.label h("category_id_#{c.id}"), h(c.display_name)
    %p
      = f.submit "Update"

= link_to 'Show', @note
= link_to 'Back', notes_path
